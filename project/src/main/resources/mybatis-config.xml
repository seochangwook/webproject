<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd"> 
<configuration>
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC">
			</transactionManager>
			<!-- POOLED : DataSource에 풀링이 적용된 JDBC 커넥터 구현체. 새로운 Connection인스턴스를 생성하기 위해 매번 초기화
						  하는 것을 피하게 해준다. 빠른 응답을 요구하는 웹 애플리케이션에서 일반적으로 사용. DBCP랑 같은 맥락. -->
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
        		<property name="url" value="jdbc:oracle:thin:@localhost:1521:orcl12c" />
        		<property name="username" value="system" />
        		<property name="password" value="oracle" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<!-- sql service add mapper tag -->
		<mapper resource="mapper/sql.xml"/>
		<mapper resource="mapper/sql_procedure.xml"/>
	</mappers>
</configuration>
